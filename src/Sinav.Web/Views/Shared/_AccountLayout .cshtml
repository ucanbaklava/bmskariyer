
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" class="light-style">

<head>
  <title>@ViewBag.Title</title>

  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
  <link rel="icon" href="~/assets/images/logo.png">



  
  <link rel="stylesheet" href="~/assets/fonts/fontawesome.css">

  <!-- Core stylesheets -->
  <environment include="Development">
    <!-- Icon fonts -->
    <link environme rel="stylesheet" href="~/assets/css/bootstrap.css"  >
    <link rel="stylesheet" href="~/assets/css/appwork.css">
    <link rel="stylesheet" href="~/assets/css/theme-paper.css">
    <link rel="stylesheet" href="~/assets/css/uikit.css">
  </environment>
  
  <environment include="Production">
    <link rel="stylesheet" href="~/assets/css/site.min.css" asp-append-version="true" />
    </environment>

  <!-- Load polyfills -->
  <script src="~/assets/js/polyfills.js"></script>
  <script>document['documentMode']===10&&document.write('<script src="https://polyfill.io/v3/polyfill.min.js?features=Intl.~locale.en"><\/script>')</script>



  <!-- Libs -->
  <link rel="stylesheet" href="~/assets/js/perfect-scrollbar/perfect-scrollbar.css">
  <!-- Page -->
  @RenderSection("styles", false)
</head>

<body>
  <div class="page-loader">
    <div class="bg-primary"></div>
  </div>

  <!-- Content -->

  @RenderBody()
  <!-- / Content -->



<environment include="Development">
  <!-- Core scripts -->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!--<script src="~/assets/js/popper/popper.js"></script> -->
  <script src="~/assets/js/bootstrap.js"></script>
  <script src="~/assets/js/sidenav.js"></script>

  <!-- Libs -->
  <script src="~/assets/js/perfect-scrollbar/perfect-scrollbar.js"></script>
  <script src="~/assets/js/main.js"></script>


</environment>

<environment include="Production">
  <script src="~/assets/js/site.min.js"></script>
</environment>



@RenderSection("scripts", false)

</body>

</html>